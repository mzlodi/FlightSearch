{
  "openapi": "3.0.1",
  "info": {
    "title": "FlightSearch.Server",
    "version": "1.0"
  },
  "paths": {
    "/api/auth": {
      "get": {
        "tags": [
          "Auth"
        ],
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/api/search": {
      "get": {
        "tags": [
          "FlightOffer"
        ],
        "parameters": [
          {
            "name": "origin",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "destination",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "departureDate",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "returnDate",
            "in": "query",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "passengers",
            "in": "query",
            "required": true,
            "schema": {
              "maximum": 9,
              "minimum": 1,
              "type": "integer",
              "format": "int32"
            }
          },
          {
            "name": "currency",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    }
  },
  "components": {}
}